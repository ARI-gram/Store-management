<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delivery Orders</title>
    <link rel="stylesheet" href="/styles/order.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 2px solid #007BFF;
            margin-bottom: 20px;
        }

        header div {
            font-size: 1rem;
            color: #555;
        }

        .title-section {
            text-align: center;
            margin-bottom: 20px;
        }

        .title-section h1 {
            font-size: 2rem;
            color: #007BFF;
            margin: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #007BFF;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        footer {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 2px solid #007BFF;
        }

        .actions-section {
            text-align: left;
            margin-bottom: 20px;
        }

        .actions-section button {
            background-color: #007BFF;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
        }

        .actions-section button:hover {
            background-color: #0056b3;
        }

        /* Hide print button when printing */
        @media print {
            .actions-section {
                display: none;
            }
        }

        .back-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #007BFF; /* Blue background */
    color: #fff; /* White text */
    text-decoration: none; /* Remove underline */
    font-size: 16px; /* Text size */
    border-radius: 5px; /* Rounded corners */
    border: 1px solid #0056b3; /* Border with darker shade */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    transition: all 0.3s ease; /* Smooth hover effect */
}

.back-button:hover {
    background-color: #0056b3; /* Darker blue on hover */
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15); /* Slightly bigger shadow */
    transform: translateY(-2px); /* Subtle lift on hover */
}

.back-button:active {
    background-color: #004085; /* Even darker blue when clicked */
    transform: translateY(0); /* Return to original position */
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1); /* Reduced shadow */
}

    </style>
</head>
<body>
    <div class="container">
        <header>
            <div>Current Time: <%= currentTime %></div>
            <div>Current Date: <%= currentDate %></div>
        </header>
        <div class="title-section">
            <h1>Order for Store : <%= storeId %></h1>
            <h2>Order List</h2>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Code</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Units</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.item_name %></td>
                        <td><%= order.code %></td>
                        <td><%= order.description %></td>
                        <td><%= order.quantity %></td>
                        <td><%= order.units %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <footer>
            <h3>Authorized By:</h3>
            <p>Name: ______________________</p>
            <p>ID: ________________________</p>
            <p>Phone: _____________________</p>
            <p>Sign: ______________________</p>
        </footer>
    </div>
    <section class="actions-section">
        <button onclick="window.print()">Print</button>
        <a href="javascript:history.back()" class="back-button">Back</a>
    </section>
</body>
</html>
