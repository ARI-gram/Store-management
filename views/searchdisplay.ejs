<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
            color: #333;
        }
        h1 {
            color: #3498db;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #3498db;
            color: #fff;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .back-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #3498db;
            color: #fff;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }
        .back-btn:hover {
            background-color: #2980b9;
        }
        .styled-link {
        display: inline-block;
        padding: 10px 20px;
        font-size: 18px;
        font-weight: bold;
        color: #fff;
        text-decoration: none;
        background-color: #3498db; /* Button-like background */
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        .styled-link:hover {
            background-color: #2ecc71; /* Change color on hover */
            transform: scale(1.05); /* Slightly enlarge */
        }

        .styled-link:active {
            transform: scale(0.95); /* Slightly shrink on click */
        }

    </style>
</head>
<body>
    <a href="/admin" class="styled-link">Admin Dashboard</a>

    <h1>Search Results</h1>

    <% if (message) { %>
        <p><%= message %></p>
    <% } %>

    <% if (results && results.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Source</th>
                    <th>ID</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Store ID</th>
                    <th>Quantity</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach(result => { %>
                    <tr>
                        <td><%= result.source %></td>
                        <td><%= result.id %></td>
                        <td><%= result.code %></td>
                        <td><%= result.name %></td>
                        <td><%= result.description || 'N/A' %></td>
                        <td><%= result.store_id || 'N/A' %></td>
                        <td><%= result.quantity || 'N/A' %></td>
                        <td><%= result.date || 'N/A' %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No results found.</p>
    <% } %>

    <!-- Back Button -->
    <button class="back-btn" onclick="window.history.back()">Back</button>
</body>
</html>
